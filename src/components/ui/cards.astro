---
import Card from './card.astro';

export type Project = {
	id: string;
	title: string;
	tech: string;
	website: string;
	github?: string;
	imageSrc: string;
	cardClass: string;
	pinClass: string;
	description: string[];
};

export interface Props {
	currentProject: Project;
	projects: Project[];
}

const { projects, currentProject } = Astro.props;
---

<div class='relative text-sm max-sm:pb-md'>
	<div class='max-w-[320px] w-full aspect-[4/5]'></div>
	<Card
		projects={projects}
		currentProject={currentProject}
	/>
</div>
