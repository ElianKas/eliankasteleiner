---
const { imageSrc, website, github, class: className } = Astro.props;
---

<div
	class={`${className} aspect-[4/5] bg-primary w-[290px] py-[25px] px-[20px] flex flex-col gap-sm shadow-md relative group hover:rotate-0`}>
	<slot name='pin' />
	<div class='aspect-square w-full group-hover:hidden'>
		<img
			class='w-full h-full object-cover'
			src={imageSrc}
			alt='Entwickelte Webseite, Kundenprojekt, Vorschau'
		/>
	</div>
	<div class='flex flex-col gap-sm px-sm group-hover:hidden'>
		<slot name='preview' />
	</div>
	<div class='hidden flex-col gap-sm group-hover:flex h-full overflow-y-auto'>
		<slot name='details' />
		<div>
			<a
				href={website}
				target='_blank'
				>Webseite</a
			> | <a
				href={github}
				target='_blank'
				>Github</a
			>
		</div>
	</div>
</div>
